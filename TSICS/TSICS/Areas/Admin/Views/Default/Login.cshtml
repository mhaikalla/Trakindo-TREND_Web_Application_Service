@model Com.Trakindo.TSICS.Data.Model.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main style="background-image: url(../../assets/images/repository/login-bg-1.jpg);" class="position-relative d-flex w-1000 justify-content-center align-items-center bg-cover">
    <div class="content-wrap login h-100 my-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @*<form action="product-health.html" method="GET" class="rounded-lg overflow-hidden">*@
            <div class="card bg-white-75">
                <div class="card-body text-center mb-4">
                    <p class="text-muted m-0">Login to Admin TREND</p>
                </div>
                <div class="card-body text-center">
                    <div class="form-group">
                        <div class="input-group border rounded-lg bg-white">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control border-0 bg-transparent", placeholder = "Username" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="input-group border rounded-lg bg-white">
                            @Html.EditorFor(model => model.AdminPassword, new { htmlAttributes = new { @class = "form-control border-0 bg-transparent", placeholder = "Password", type = "Password" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.AdminPassword, "", new { @class = "text-danger" })
                        <br />
                    </div>
                    <br />
                    <div class="form-group text-center mb-5">
                        <button type="submit" class="btn btn-lg d-block btn-warning rounded-lg px-5 mx-auto">Login</button>
                    </div>
                </div>
            </div>
        }
    </div>
  
</main>

  <div style="display:none;">
        <span>@ViewBag.connmain</span>
       <span>@ViewBag.connsec</span>
    </div>