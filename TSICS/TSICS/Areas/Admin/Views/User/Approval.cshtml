@model Com.Trakindo.TSICS.Data.Model.User

@{
    ViewBag.Title = "Approve1";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="body position-relative d-flex flex-column">
    <div data-active_page="user--manage" class="content-wrap flex-fill"> 
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserId)
        <section class="position-relative mt-5">
            <div class="container-fluid">
                <div class="row no-gutters mb-5">
                    <div class="col-lg-12 position-relative">
                        <section class="card bg-white shadow-sm border-0 rounded-0">
                            <div class="card-body">
                                <header>
                                    <h3 class="font-secondary"> <span class="text-dark">TREND</span> <span class="text-secondary">Activating New Account Request</span></h3>
                                    @*<div>To: @(String.IsNullOrWhiteSpace(Session["emailbackend"].ToString()) ? "-" : Session["emailbackend"].ToString())</div>
                        <div>Reply-to: @ViewBag.ReplyTo</div>*@
                                </header>
                                <hr>
                                <fieldset>
                                    <legend></legend>
                                    <div class="row no-gutters text-muted mb-4">
                                        <div class="col-xl-4 mb-0 mb-lg-2 d-flex justify-content-between">Salary No<span class="d-none d-xl-inline mx-1">:</span></div>
                                        <div class="col-xl-8 mb-3 mb-lg-2">
                                            <div class="switch-field">
                                                <div class="prev">@Model.EmployeeId</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-4 mb-0 mb-lg-2 d-flex justify-content-between">Full Name<span class="d-none d-xl-inline mx-1">:</span></div>
                                        <div class="col-xl-8 mb-3 mb-lg-2">
                                            <div class="switch-field">
                                                <div class="prev">@Model.Name</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row no-gutters text-muted mb-4">
                                        @if (Model.BranchName == null && Model.AreaName == null)
                                        {
                                            <div class="col-xl-4 mb-0 mb-lg-2 d-flex justify-content-between">Location<span class="d-none d-xl-inline mx-1">:</span></div>
                                            <div class="col-xl-8 mb-3 mb-lg-2">
                                                <div class="switch-field">
                                                    <div class="prev">HEAD OFFICE</div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-xl-4 mb-0 mb-lg-2 d-flex justify-content-between">Branch Location<span class="d-none d-xl-inline mx-1">:</span></div>
                                            <div class="col-xl-8 mb-3 mb-lg-2">
                                                <div class="switch-field">
                                                    <div class="prev">@Model.BranchName</div>
                                                </div>
                                            </div>
                                            <div class="col-xl-4 mb-0 mb-lg-2 d-flex justify-content-between">Area Location<span class="d-none d-xl-inline mx-1">:</span></div>
                                            <div class="col-xl-8 mb-3 mb-lg-2">
                                                <div class="switch-field">
                                                    <div class="prev">@Model.AreaName </div>
                                                </div>
                                            </div>
                                        }
                                        <div class="col-xl-4 mb-0 mb-lg-2 d-flex justify-content-between">Specification<span class="d-none d-xl-inline mx-1">:</span></div>
                                        <div class="col-xl-8 mb-3 mb-lg-2">
                                            <div class="switch-field">
                                                <div class="prev">@Model.RoleDescription </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-4 mb-0 mb-lg-2 d-flex justify-content-between">Level<span class="d-none d-xl-inline mx-1">:</span></div>
                                        <div class="col-xl-8 mb-3 mb-lg-2">
                                            <div class="switch-field">
                                                <div class="prev">@ViewBag.Level </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <fieldset>
                                    <legend></legend>
                                    <div class="cust-fab d-inline-block d-md-none left">
                                        <input id="fab-check" type="checkbox" name="" class="fab-check">
                                        <label for="fab-check" class="btn btn-warning text-white rounded-circle btn-fab-trigger"><i class="fa fa-plus"></i></label>
                                        <div class="fab-group">
                                            <button type="submit" class="fab-item btn rounded-pill btn-light border-warning shadow-sm">Approve</button>
                                        </div>
                                    </div>
                                    <div class="row d-none d-md-flex">
                                        <div class="col text-center">
                                            <button type="submit" class="btn btn-rounded btn-success">ACTIVATE</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </section>
        }
    </div>
</main>


